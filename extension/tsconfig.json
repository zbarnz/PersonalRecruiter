{
  "compilerOptions": {
    "outDir": "./build",
    "noImplicitAny": true,
    "module": "ESNEXT",
    "target": "ESNext",
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types" // Include your custom types directory here
    ]
  },
  "include": ["./**/*"],
  "exclude": [
    "./temp_old_code/*",
    "./content_scripts/indeed/index.ts",
    "./build/**/*"
  ]
}
